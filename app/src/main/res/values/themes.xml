<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectGreedyGame" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textLargeBold">
        <item name="android:textColor">@color/appcolor</item>
        <item name="android:textSize">@dimen/s30</item>
        <item name="fontFamily">@font/montserratbold</item>
    </style>
    <style name="textLargeSemiBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/s21</item>
        <item name="fontFamily">@font/montserratsemibold</item>
    </style>
    <style name="textLargeMedium">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/s16</item>
        <item name="fontFamily">@font/montserratmedium</item>
    </style>

    <dimen name="s30">30dp</dimen>
    <dimen name="s21">21dp</dimen>
    <dimen name="s16">16dp</dimen>
</resources>